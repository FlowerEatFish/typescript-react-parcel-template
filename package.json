{
  "name": "typescript-react-template",
  "version": "0.1.0",
  "description": "A TypeScript and React template",
  "main": "index.html",
  "repository": "git@github.com:FlowerEatFish/typescript-react-template.git",
  "author": "Eating-Fish Flower <flower.eating.fish@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start:dev": "parcel index.html --open --port 8080",
    "build:prod": "parcel build index.html",
    "eslint": "eslint . -f stylish --ext .js --ext .ts --ext .tsx",
    "eslint:fix": "eslint . -f stylish --ext .js --ext .ts --ext .tsx --fix",
    "stylelint": "stylelint ./src/style/*.scss --syntax scss",
    "stylelint:fix": "stylelint ./src/style/*.scss --syntax scss --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run eslint && yarn run stylelint"
    }
  },
  "lint-staged": {
    "*.{html,json,js.jsx,ts,tsx,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "jquery": "^3.4.1",
    "popper.js": "^1.15.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.0.1"
  },
  "devDependencies": {
    "@types/bootstrap": "^4.3.1",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^4.3.5",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "sass": "^1.22.12",
    "stylelint": "^11.0.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-sass-guidelines": "^6.1.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.11.0",
    "typescript": "^3.6.3"
  }
}
